{% if postListItems.length %}
  <section class="[ post-list ] [ pad-top-700 gap-bottom-900 ]">
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <h3 class="[ post-list__heading font-cooper-light leading-tight ]">{{ postListHeading }}</h3>
      <ol class="[ post-list__items ] [ sf-flow ] [ pad-top-300 ]" reversed>
        {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="[ post-list__item {{ postListItemVariation }} ]">
              <span>
                <h3 class="font-avenir leading-tight text-500 weight-regular">
                  <a href="{{ item.url }}" class="post-list__link" rel="bookmark">{{ item.data.title }}
                </h3>
                 {# <p class="text-300 gap-top-300">
                  <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
                </p> #}
              </span>
              {% if item.data.postImage %}
                <a href="{{ item.url }}" class="post-list__link" rel="bookmark">
                  <img src="{{ item.data.postImage }}" href="{{ item.data.title }}" />
                </a>
              {% endif %}
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
