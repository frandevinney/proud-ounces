<header class="[ intro ] [ {% if header_padding === 'large' %} pad-top-900 pad-bottom-500 {% else %} pad-top-500 pad-bottom-500 {% endif %} ]">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ {% if intro_class %} {{ intro_class }} {% endif %} ] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>
