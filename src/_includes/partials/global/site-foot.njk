<footer role="contentinfo" class="[ site-foot ] [ pad-top-700 pad-bottom-900 ]">
  <div class="wrapper">
    <div class="[ site-foot__inner ] [ md:box-flex space-between align-center ]">
      {% if site.shortDesc %}
        <div>
          <article class="[ site-foot__details ] [ sf-flow measure-compact ]">
            <img class="logo-mark"src="../../images/proud-ounces-mark.png" alt="Proud Ounces" title="Proud Ounces" />
            {{ site.shortDesc | markdownFilter | safe }}
            {% if artworkCredit %}
              <p class="[ text-300 color-slate ]">{{ artworkCreditCopy }} {{ artworkCreditSources | safe }}. </p>
            {% endif%}

          </article>
        </div>
      {% endif %}
      <div>
        {% set ariaLabel = 'footer navigation' %}
        {% include "partials/components/footernav.njk" %}
      </div>
    </div>
    {# {% if site.showThemeCredit %}
      <p class="[ site-foot__credit ] [ pad-top-900 ]">
        Powered by the <a href="https://hylia.website" rel="external">Hylia Eleventy Starter Kit v{{ pkg.version }}</a>.
      </p>
    {% endif %} #}
  </div>
</footer>
